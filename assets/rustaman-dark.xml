<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="rustaman-dark" _name="Rustaman Dark" version="1.0">
  <author>Guillaume Gauvrit</author>
  <_description>Default theme for Rustaman</_description>

  <color name="background"          value="#1e2223"/>
  <color name="alt-background"      value="#30393e"/>
  <color name="background-pattern"  value="#19343c"/>
  <color name="current-line"        value="#1c2a35"/>
  <color name="line-numbers"        value="#1d272d"/>
  <color name="selection"           value="#93872d"/>
  <color name="selection-unfocused" value="#7c5034"/>
  <color name="alt-selection"       value="#7c5034"/>
  <color name="foreground"          value="#91a1a1"/>
  <color name="light-gray"          value="#9090a5"/>

  <color name="yellow"              value="#B58900"/>
  <color name="orange"              value="#c17616"/>
  <color name="red"                 value="#DC322F"/>
  <color name="magenta"             value="#C586C0"/>
  <color name="violet"              value="#897ab6"/>
  <color name="blue"                value="#268BD2"/>
  <color name="cyan"                value="#3a99ac"/>
  <color name="green"               value="#7AC234"/>
  <color name="dark-green"          value="#4E9A00"/>


  <!-- Global Settings 
  https://developer.gnome.org/gtksourceview/stable/style-reference.html
  -->

  <style name="text"                        foreground="foreground" background="background"/>
  <style name="selection"                   foreground="background" background="selection"/>
  <style name="cursor"                      foreground="foreground"/>
  <style name="secondary-cursor"            foreground="alt-background"/>
  <style name="current-line"                background="background"/>
  <style name="current-line-number"         background="current-line"/>
  <style name="line-numbers"                foreground="light-gray" background="line-numbers"/>
  <style name="snippet-focus"               foreground="alt-background" background="alt-background"/>
  <style name="background-pattern"          background="background-pattern"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="dark-green" background="alt-background" bold="true"/>
  <style name="bracket-mismatch"            foreground="red" background="alt-background"/>



  <!-- Right Margin -->
  <style name="right-margin"                foreground="light-gray" background="alt-background"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="background" background="yellow"/>

  <style name="rustaman-request:http-method"         foreground="yellow" bold="true" />
  <style name="rustaman-request:url"                 foreground="cyan" bold="true" />
  <style name="rustaman-request:http-version"        foreground="yellow" />
  <style name="rustaman-request:template-var"        foreground="violet" bold="true" />
  <style name="rustaman-request:template-helper"     foreground="orange" bold="true" />

  <style name="rustaman-request:map-key"             foreground="green"/>

  <style name="rustaman-request:preprocessor"        foreground="magenta"/>
  <style name="rustaman-request:preprocessor-danger" foreground="red"/>

  <style name="rustaman-response:http-log-request"   foreground="dark-green"/>
  <style name="rustaman-response:http-log-response"  foreground="dark-green"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="dark-green"/>
  <style name="def:shebang"                 foreground="magenta" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="blue"/>
  <style name="def:special-char"            foreground="red"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="blue"/>

  <!-- Functions -->
  <style name="def:function"                foreground="blue"/>

  <!-- Keywords -->
  <style name="def:keyword"                 foreground="green"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="orange"/>

  <!-- Types -->
  <style name="def:type"                    foreground="yellow"/>

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="orange"/>
  <style name="def:inline-code"             foreground="blue"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="blue"/>
  <style name="def:link-symbol"             foreground="blue" bold="true"/>
  <style name="def:link-destination"        italic="true" underline="single"/>
  <style name="def:heading"                 foreground="yellow"/>
  <style name="def:thematic-break"          foreground="yellow"/>
  <style name="def:preformatted-section"    foreground="blue"/>
  <style name="def:list-marker"             foreground="orange"/>

  <!-- Operators -->
  <style name="def:operator"                foreground="green"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="violet"/>
  <style name="def:error"                   underline="error" underline-color="red"/>
  <style name="def:note"                    foreground="magenta" bold="true"/>
  <style name="def:net-address"             italic="true" underline="single"/>
  
  <!-- Language specific styles -->
  <style name="json:keyname"                foreground="green"/>


</style-scheme>
